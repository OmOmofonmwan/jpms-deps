                        <configuration>
                            <target>
                                <echo message="unzipping source files" />
                                <unzip dest="${project.build.directory}/sources/">
                                    <fileset dir="${project.build.directory}/sourcejars/">
                                        <include name="*.jar" />
                                    </fileset>
                                </unzip>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <execution>
                        <phase>prepare-package</phase>
                        <configuration>
                            <target>
                                <echo message="unzipping class files" />
                                <unzip dest="${project.build.directory}/classes/">
                                    <fileset dir="${project.build.directory}/classjars/">
                                        <include name="*.jar" />
                                    </fileset>
                                </unzip>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
