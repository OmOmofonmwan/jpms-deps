                    <execution>
                        <id>aggregate</id>
                        <inherited>false</inherited>
                        <goals>
                            <goal>javadoc</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
							<failOnError>false</failOnError>
                            <source>8</source>
                            <target>8</target>
							<compilerArgument>-XDignore.symbol.file</compilerArgument>
		
                            <sourcepath>${project.build.directory}/sources</sourcepath>
                            <doclint>none</doclint>
                            <!--Excludes that match each of the subproject excludes -->
                            <sourceFileExcludes>
								<exclude>**/Jvm.java</exclude>
                                <exclude>**/OS.java</exclude>                                
                                <exclude>**/ByteBufferAccessor.java</exclude>
                                <exclude>**/Jdk8ByteBufferCleanerService.java</exclude>
