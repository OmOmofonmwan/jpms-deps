                                <exclude>net/openhft/chronicle/hash/VanillaGlobalMutableState.java</exclude>
                                <exclude>net/openhft/chronicle/hash/ReplicatedHashSegmentContext.java</exclude>
                                <exclude>net/openhft/chronicle/hash/VanillaGlobalMutableState*Native.java</exclude>
                                <exclude>net/openhft/chronicle/map/MapDiagnostics.java</exclude>
                                <exclude>net/openhft/chronicle/map/VanillaChronicleMap.java</exclude>
                                <exclude>net/openhft/chronicle/map/Replica.java</exclude>
                                <exclude>net/openhft/chronicle/map/ReplicatedChronicleMap.java</exclude>
                                <exclude>net/openhft/chronicle/map/ReplicatedGlobalMutableState*Native.java</exclude>
                                <exclude>net/openhft/chronicle/map/ChronicleHashCorruptionImpl.java</exclude>
                                <exclude>net/openhft/chronicle/set/DummyValueData.java</exclude>
                                <exclude>net/openhft/chronicle/values/FieldModel.java</exclude>
                                <exclude>net/openhft/chronicle/values/ArrayFieldModel.java</exclude>
                                <exclude>net/openhft/chronicle/values/Enums.java</exclude>
                                <exclude>net/openhft/chronicle/values/CharSequences.java</exclude>
                                <exclude>net/openhft/chronicle/values/PointersBytesStore.java</exclude>
                                <exclude>net/openhft/chronicle/values/HeapByteable.java</exclude>
                                
                                <exclude>**/Compiled*.java</exclude>
                            </sourceFileExcludes>
                            <excludePackageNames>
                                net.openhft.chronicle.hash.serialization.impl:net.openhft.chronicle.hash.impl:net.openhft.chronicle.map.impl:**.replication
                            </excludePackageNames>
                            <detectLinks>false</detectLinks>
                            <validateLinks>false</validateLinks>
                            <detectOfflineLinks>false</detectOfflineLinks>
                            
                            <compilerVersion>8</compilerVersion>
                            <verbose>false</verbose>
        					<fork>false</fork>
        					<sourceCompatibility>8</sourceCompatibility>
        					<targetCompatibility>8</targetCompatibility>
                            
                            <compilerArgs>
                                <arg>--add-exports=jdk.internal.opt/jdk.internal.joptsimple=ALL-UNNAMED</arg>
                                <arg>--add-exports=java.base/sun.nio.ch=ALL-UNNAMED</arg>
                                <arg>--add-opens=java.base/java.lang.reflect=ALL-UNNAMED</arg>
                                <arg>--add-exports=jdk.unsupported/sun.misc=ALL-UNNAMED</arg>
                                <arg>--add-exports=java.base/sun.security.provider=ALL-UNNAMED</arg>
                                <arg>--add-opens=java.base/sun.security.util=ALL-UNNAMED</arg>
                                <arg>--add-opens=java.base/jdk.internal.misc=ALL-UNNAMED</arg>
                            </compilerArgs>

